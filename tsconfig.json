{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es6",
        "module": "commonjs",
        "allowJs": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "declaration": false,
        "removeComments": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strict": true,
        "outDir": "build",
        "lib": ["es6", "es7", "dom"],
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        }
    }
}
